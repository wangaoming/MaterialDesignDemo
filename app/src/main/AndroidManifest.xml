<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.materialdesigndemo">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:networkSecurityConfig="@xml/network_security_config"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".activity.Main2Activity"></activity>
        <activity
            android:name=".activity.DesignNavigationActivity"
            android:label="@string/title_activity_design_navigation"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity android:name=".activity.TabLayoutActivity" />
        <activity android:name=".activity.NotificationActivity" />
        <activity android:name=".activity.NavigationActivity" />
        <activity android:name=".activity.NewsDetailActivity" />
        <activity android:name=".activity.CoordinatorActivity" />
        <activity android:name=".activity.RecycleViewActivity" />
        <activity android:name=".activity.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>